// Unicode
var 色 = "赤";
if (色 == "赤") {
    print("これは赤だ！"); // Outputs: これは赤だ！
} else {
    print("❌赤じゃない。");
}

// ASCII
var color = "blue";
if (color == "red") {
    print("This is red!");
} else if (color == "blue") {
    print("This is blue!");  // Outputs: This is blue!
} else {
    print("Not red.");
}