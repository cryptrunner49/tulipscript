// Example with while and break
var i = 0;
println("While loop with break:");
while (i < 10) {
    println(i);
    i = i + 1;
    if (i == 4) {
        println("Breaking at i = 4");
        break;
    }
}
println("Exited while loop");

// Example with for and break
println("For loop with break:");
for (var i = 0; i < 10; i = i + 1) {
    println(i);
    if (i == 6) {
        println("Breaking at i = 6");
        break;
    }
}
println("Exited for loop");