// Unicode
fn 计数器を作る() {
    var 数値 = 0;
    fn 増やす() {
        数値 = 数値 + 1;
        return 数値;
    }
    return 増やす;
}
var 计数器 = 计数器を作る();
println(计数器()); // Outputs: 1
println(计数器()); // Outputs: 2

// ASCII
fn makeCounter() {
    var value = 0;
    fn increment() {
        value = value + 1;
        return value;
    }
    return increment;
}
var counter = makeCounter();
println(counter()); // Outputs: 1
println(counter()); // Outputs: 2