// Unicode
var 挨拶 = "Hello, world!";
var 💬 = "Chat!";
println(挨拶); // Outputs: Hello, world!
println(💬);   // Outputs: Chat!

// ASCII
var greeting = "Hello, world!";
var message = "Chat!";
println(greeting); // Outputs: Hello, world!
println(message);  // Outputs: Chat!

// Concatenation Unicode
var 挨拶文 = "Hello, " + "Seed!";
var 💬➕ = "Hi" + "!";
println(挨拶文); // Outputs: Hello, Seed!
println(💬➕);   // Outputs: Hi!

// Concatenation ASCII
var greetingText = "Hello, " + "Seed!";
var msgAdd = "Hi" + "!";
println(greetingText); // Outputs: Hello, Seed!
println(msgAdd);       // Outputs: Hi!

// Cropping Unicode
var 文章 = "Hello, world!";
var 切り取り = 文章 - "world";
var ✂️ = "abcde" - "c";
println(切り取り); // Outputs: Hello, !
println(✂️);      // Outputs: abde

// Cropping ASCII
var text = "Hello, world!";
var cropped = text - "world";
var _trim = "abcde" - "c";
println(cropped); // Outputs: Hello, !
println(_trim);    // Outputs: abde

// String
var str = "Hello World";
char_at(str, 1);         // Returns "e"
substring(str, 0, 5);    // Returns "Hello"
str_index_of(str, "o");  // Returns 4
str_last_index_of(str, "o"); // Returns 7
str_contains(str, "World");  // Returns true
starts_with(str, "He");  // Returns true
ends_with(str, "ld");    // Returns true
to_upper(str);           // Returns "HELLO WORLD"
to_lower(str);           // Returns "hello world"
trim("  hi  ");          // Returns "hi"
split(str, " ");         // Returns ["Hello", "World"]
replace(str, "o", "0");  // Returns "Hell0 W0rld"
str_length(str);         // Returns 11