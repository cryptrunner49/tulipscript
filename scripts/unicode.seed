// 🐾 Comprehensive Example with Animals and Emoji
struct 動物 {
    種類 = "不明";
    長さ = 50;  // Average cat length in cm
    高さ = 25;  // Average cat height in cm
}

fn 動物を説明する(アニマル) {
    return アニマル.種類 + ": " + to_str(アニマル.長さ) + "x" + to_str(アニマル.高さ) + " cm";
}

var お気に入り = 動物();
お気に入り.種類 = "ネコ";

if (お気に入り.長さ <= 50) {
    println("動物が平均または短い。🐾🐱");
} else {
    println("動物が平均より長い。🐾");
}

var 説明 = 動物を説明する(お気に入り);
println(説明); // Outputs: ネコ: 50x25 cm

var 回数 = 0;
while (回数 < 2) {
    println("にゃん #" + to_str(回数) + "🐾");
    回数 = 回数 + 1;
}